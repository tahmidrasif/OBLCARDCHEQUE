                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <label class="col-sm-11 control-label"></label>
                <div class="col-sm-1">
                    <button class="btn btn-info" type="submit" id="searchBtn">Search</button>
                </div>
            </div>
        }
    </div>
</div>



