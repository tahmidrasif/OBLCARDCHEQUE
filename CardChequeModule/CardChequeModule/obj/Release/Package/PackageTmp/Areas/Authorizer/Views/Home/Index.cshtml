@model CardChequeModule.Areas.Authorizer.Models.AuthorizerDashboardVM

@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new {area = "Authorizer", id = "authDashboard", @class = "form-horizontal"}))
{
    
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">Date Range</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    <label class="col-sm-1"><strong>Start Date</strong></label>
                    <div class="col-sm-5">
                        <div class='input-group date' id='datetimepicker1'>
                            <input type="text" id="startDate" name="startDate" class="form-control" placeholder="MM/DD/YYYY"/>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <label class="col-sm-1"><strong>End Date</strong></label>
                    <div class="col-sm-5">
                        <div class='input-group date' id='datetimepicker2'>
                            <input type="text" id="endDate" name="endDate" class="form-control" placeholder="MM/DD/YYYY" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">User Information</h3>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item">

                            <div class="form-group">
                                <label class="col-sm-4"><strong>Employee Id</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.EmployeeId)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Name</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.Name)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Branch</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.BranchName)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Job Title</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.JobTitle)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Email</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.Email)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Present Department</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.PreDeptName)</div>
                            </div>
                        </li>
                    </ul>



                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Pending Cheque Book Requisition</h3>
                </div>
                <div class="panel-body" style="max-height: 400px;overflow-y: scroll;">

                    <table class="table table-striped">
                <tr class="success">

                    <th>
                        @Html.DisplayName("Card Number")
                    </th>
                    <th>
                        @Html.DisplayName("Applied Date")
                    </th>
                    <th>
                        @Html.DisplayName("Branch")
                    </th>
                </tr>

                @foreach (var item in Model.PendingRequisitionList)
                {

                    <tr class="active">

                        <td>
                            @Html.DisplayFor(modelItem => item.CARDNO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CREATEDON)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BRANCHINFO.BRANCHNAME)
                        </td>

                    </tr>

                }


            </table>

            <table class="table table-condensed table-bordered">
                <tr class="danger">
                    <td>Total Number of Pending Requisitons</td>
                    <td>@Model.PendingRequisitionCount</td>
                </tr>            
            </table>

                    <div class="form-group">

                        <div class="col-sm-12">
                            <button class="btn btn-info" type="submit" id="searchBtn" name="btnName" value="pendingreq">Search</button>
                        </div>
                        <br/>
                    </div>
                </div>
            </div>
        </div>

    </div>

    
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Pending Card Cheque</h3>
                </div>
                <div class="panel-body" style="max-height: 400px;overflow-y: scroll;">

                    <table class="table table-striped">
                        <tr class="success">

                           
                            <th>
                                @Html.DisplayName("Leaf Number")
                            </th>
                            <th>
                                @Html.DisplayName("Applied Date")
                            </th>
                            <th>
                                @Html.DisplayName("Amount")
                            </th>
                        </tr>

                        @foreach (var item in Model.PendingCardChequeList)
                        {

                            <tr class="active">

                                <td>
                                    @Html.DisplayFor(modelItem => item.CARDCHLEAF.LEAFNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CREATEDON)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AMOUNT)
                                </td>

                            </tr>

                        }


                    </table>

                    <table class="table table-condensed table-bordered">
                        <tr class="danger">
                            <td>Pending Card Cheque</td>
                            <td>Total</td>
                           
                        </tr>
                        <tr class="">
                            <td>@Model.PendingCardChequeCount</td>
                            <td>@Model.PendingCardChequeAmount</td>
                        
                        </tr>
                    </table>

                    <div class="form-group">

                        <div class="col-sm-12">
                            <button class="btn btn-info" type="submit" id="searchBtn" name="btnName" value="pendingcc">Search</button>
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Authorized Requisition</h3>
                </div>
                <div class="panel-body" style="max-height: 400px;overflow-y: scroll;">

                    <table class="table table-striped">
                        <tr class="success">

                            <th>
                                @Html.DisplayName("Card Number")
                            </th>
                            <th>
                                @Html.DisplayName("Applied Date")
                            </th>
                            <th>
                                @Html.DisplayName("Branch")
                            </th>
                        </tr>

                        @foreach (var item in Model.AuthorizedRequisitionList)
                        {

                            <tr class="active">

                                <td>
                                    @Html.DisplayFor(modelItem => item.CARDNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CREATEDON)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BRANCHINFO.BRANCHNAME)
                                </td>

                            </tr>

                        }


                    </table>

                    <table class="table table-condensed table-bordered">
                        <tr class="danger">
                            <td>Total Number of Authorized Requisitons</td>
                            <td>@Model.AuthRequisitionCount</td>
                        </tr>
                    </table>

                    <div class="form-group">

                        <div class="col-sm-12">
                            <button class="btn btn-info" type="submit" id="searchBtn" name="btnName" value="authreq">Search</button>
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Authorized Card Cheque</h3>
                </div>
                <div class="panel-body" style="max-height: 400px;overflow-y: scroll;">

                    <table class="table table-striped">
                        <tr class="success">

                            <th>
                                @Html.DisplayName("Card Number")
                            </th>
                            <th>
                                @Html.DisplayName("Leaf Number")
                            </th>
                            <th>
                                @Html.DisplayName("Branch")
                            </th>
                            <th>
                                @Html.DisplayName("Applied By")
                            </th>
                            <th>
                                @Html.DisplayName("Amount")
                            </th>
                        </tr>

                        @foreach (var item in Model.AuthorizedCardChequeList)
                        {

                            <tr class="active">

                                <td>
                                    @Html.DisplayFor(modelItem => item.CARDNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CARDCHLEAF.LEAFNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BRANCHINFO.BRANCHNAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CREATEDBY)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AMOUNT)
                                </td>

                            </tr>

                        }


                    </table>

                    <table class="table table-condensed table-bordered">
                        <tr class="danger">
                            <td>Total Count</td>
                            <td>Total Collection</td>
                        </tr>
                        <tr class="">
                            <td>@Model.AuthCardCHequeCount</td>
                            <td>@Model.AuthorizedCardChequeAmount</td>
                        </tr>
                    </table>

                    <div class="form-group">

                        <div class="col-sm-12">
                            <button class="btn btn-info" type="submit" id="searchBtn" name="btnName" value="authcc">Search</button>
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        </div>
        
        
    </div>
    <br/>
}



@section DatetimeCss{

    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

}
@section DateTimeJs{

    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                format: 'MM/DD/YYYY'
            });

        });
        $(function () {
            $('#datetimepicker2').datetimepicker({
                format: 'MM/DD/YYYY'
            });

        });

    </script>
}

