@using CardChequeModule.Models
@model CardChequeModule.Areas.Teller.Models.TellerDashBoardVM


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { area = "Teller", id = "tellerDashboard", @class = "form-horizontal" }))
{



    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">Date Range</h3>
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-1"><strong>Start Date</strong></label>
                        <div class="col-sm-5">
                            <div class='input-group date' id='datetimepicker1'>
                                <input type="text" id="startDate" name="startDate" class="form-control" placeholder="MM/DD/YYYY" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <label class="col-sm-1"><strong>End Date</strong></label>
                        <div class="col-sm-5">
                            <div class='input-group date' id='datetimepicker2'>
                                <input type="text" id="endDate" name="endDate" class="form-control" placeholder="MM/DD/YYYY" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">User Information</h3>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item">

                            <div class="form-group">
                                <label class="col-sm-4"><strong>Employee Id</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.EmployeeId)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Name</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.Name)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Branch</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.BranchName)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Job Title</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.JobTitle)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Email</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.Email)</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-group">
                                <label class="col-sm-4"><strong>Present Department</strong></label>
                                <div class="col-sm-8">@Html.DisplayFor(x => x.EmployeeInfoVm.PreDeptName)</div>
                            </div>
                        </li>
                    </ul>



                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Visa Payment</h3>
                </div>
                <div class="panel-body" style="max-height: 400px;overflow-y: scroll;">

                    <table class=" table table-striped">
                        <tr class="success">

                            <th>
                                @Html.DisplayName("Card Number")
                            </th>
                            <th>
                                @Html.DisplayName("Applied Date")
                            </th>
                            <th>
                                @Html.DisplayName("Amount")
                            </th>
                        </tr>

                        @foreach (var item in Model.Deposits)
                        {

                            <tr class="active">

                                <td>
                                    @Html.DisplayFor(modelItem => item.CARDNUMBER)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CREATEDON)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AMOUNT)
                                </td>

                            </tr>

                        }


                    </table>

                    <table class="table table-condensed table-bordered">
                        <tr class="danger">
                            <td>Total Number of Payment</td>
                            <td>Total Collection</td>
                        </tr>
                        <tr>
                            <td>@Model.TotalVisaPayment</td>
                            <td>@Model.TotalVisaPaymentCollection</td>
                        </tr>
                    </table>

                    <div class="form-group">

                        <div class="col-sm-12">
                            <button class="btn btn-info" type="submit" id="searchBtn" name="btnName" value="visa">Search</button>
                        </div>
                        <br/>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Cheque Requisition</h3>
                </div>
                <div class="panel-body" style="max-height: 400px;overflow-y: scroll;">

                    <table class="table table-striped">
                        <tr class="success">

                            <th>
                                @Html.DisplayName("Card Number")
                            </th>
                            <th>
                                @Html.DisplayName("Applied Date")
                            </th>
                            <th>
                                @Html.DisplayName("Status")
                            </th>
                        </tr>

                        @foreach (var item in Model.Requisitions)
                        {

                            <tr class="active">

                                <td>
                                    @Html.DisplayFor(modelItem => item.CARDNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CREATEDON)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OCCENUMERATION.Name)
                                </td>

                            </tr>

                        }


                    </table>
                    <table class="table table-condensed table-bordered">
                        <tr class="danger">
                            <td>Total Number of Requisition</td>
                            <td>@Model.TotalReqisitionRequest</td>
                        </tr>

                    </table>
                    <div class="form-group">

                        <div class="col-sm-12">
                            <button class="btn btn-info" type="submit" id="searchBtn" name="btnName" value="requisition">Search</button>
                        </div>
                        <br/>
                    </div>
                </div>
            </div>
        </div>



        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Cheque Payment</h3>
                </div>
                <div class="panel-body" style="max-height: 400px;overflow-y: scroll;">

                    <table class="table table-striped">
                        <tr class="success">

                            <th>
                                @Html.DisplayName("Card Number")
                            </th>
                            <th>
                                @Html.DisplayName("Leaf Number")
                            </th>
                            <th>
                                @Html.DisplayName("Amount")
                            </th>
                            <th>
                                @Html.DisplayName("Date")
                            </th>
                        </tr>

                        @foreach (var item in Model.ChequeTrans)
                        {

                            <tr class="active">

                                <td>
                                    @Html.DisplayFor(modelItem => item.CARDNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CREATEDON)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AMOUNT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CREATEDON)
                                </td>

                            </tr>

                        }


                    </table>
                    <table class="table table-condensed table-bordered">
                        <tr class="danger">
                            <td>Total Number Of Payment</td>
                            <td>Total Collection</td>
                        </tr>
                        <tr>
                            <td>@Model.TotalChequePaymentNumber</td>
                            <td>@Model.TotalCardPayment</td>
                        </tr>
                    </table>
                    <div class="form-group">

                        <div class="col-sm-12">
                            <button class="btn btn-info" type="submit" id="searchBtn" name="btnName" value="cardcheque">Search</button>
                        </div>
                        <br/>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


@section DatetimeCss{

    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

}
@section DateTimeJs{

    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                format: 'MM/DD/YYYY'
            });

        });
        $(function () {
            $('#datetimepicker2').datetimepicker({
                format: 'MM/DD/YYYY'
            });

        });

    </script>
}

