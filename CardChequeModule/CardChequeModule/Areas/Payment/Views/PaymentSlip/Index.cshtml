</div>
    

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        $(function () {

            $('#accdebitDiv *').attr('disabled', true);
            $('#pdcDiv *').attr('disabled', true);


            $("input[name$='PAYMENTTYPE']").click(function () {
                var test = $(this).val();
                $('.error label').text('');
                if (test == 'Cash') {

                    $('#accdebitDiv *').attr('disabled', true);
                    $('#pdcDiv *').attr('disabled', true);

                    $("#accdebitDiv :text").val("");
                    $("#pdcDiv :text").val("");
                    $("#accdebitDiv label.error").text("");
                    $("#pdcDiv label.error").text("");
                    $('textarea').val("");
                }
                if (test == 'Cheque') {
                    $('#pdcDiv *').attr('disabled', false);
                    $('#accdebitDiv *').attr('disabled', true);

                    //  $("#amount-error").text("");
                    $("#pdcDiv :text").val("");
                    $("#accdebitDiv :text").val("");
                    $("#accdebitDiv label.error").text("");
                    $("#pdcDiv label.error").text("");
                    $('textarea').val("");
                }
                if (test == 'ADI') {
                    $('#accdebitDiv *').attr('disabled', false);
                    $('#pdcDiv *').attr('disabled', true);


                    //    $("#amount-error").text("");

                    $("#accdebitDiv :text").val("");
                    $("#accdebitDiv label.error").text("");
                    $("#pdcDiv label.error").text("");
                    $('textarea').val("");
                }

            });


            // subscribe to the keydown event

            $("#CARDNUMBER").blur(function () {
                // when a key is pressed check if its code was 9 (TAB)


                $.ajax({
                    url: '@Url.Action("GetCardInfo", "Paymentslip", new { area = "Payment" })',                   
                    type: 'POST',
                    data: { cardNo: $(this).val() },
                    beforeSend: function () { $('#spinner').show(); },
                    complete: function () { $('#spinner').hide(); },
                    success: function (result) {
                        if (result == null) {
                            alert("No Data Found");
                        } else {

                            $('#CARDHOLDERNAME').val(result);                          
                        }
                    },
                    error: function (xhr) {
                        alert("Something is wrong");
                    }
                });

            });
        });

        function OnSuccess(response) {
            $('#modalBody').html(response);
            $('#myModal').modal('show');
           //  window.location.href = '/Payment/List/Index/';
        }
        function OnFailure(response) {
            alert(response);
        }

        $("#chequeForm").validate({
            rules: {
                AMOUNT: {
                    required: true,
                    number: true
                },
                CREATEDON: {
                    required: true,

                },
                CARDNUMBER: {
                    required: true,
                    digits: true
                },
                CURRENCY: {
                    required: true,
                },
                PAYMENTTYPE: {
                    required: true,
                },
                BRANCH: {
                    required: true,
                },
                ADI: {
                    required: true,
                    digits: true
                },

                PDCBANK: {
                    required: true,
                },
                PDCBRANCH: {
                    required: true,
                },
                PDCCHEQUENO: {
                    required: true,
                },
                PDCDATE: {
                    required: true,
                },
            },
            messages:
            {
                AMOUNT: {
                    required: "Please enter the amount",
                    number: "Numbers only"
                },
                PAYMENTTYPE: {
                    required: "Select a Payment Type",
                },
                BRANCH: {
                    required: "Enter a Branch",
                },
            },
            errorPlacement: function (error, element) {

                if (element.attr("name") == "CREATEDON") {

                    error.appendTo(element.closest('#myId'));

                }
                if (element.attr("type") == "radio") {
                    error.insertAfter("#radioError").css({ marginLeft: "200px" });

                } else {
                    error.insertAfter(element);
                }

            },
        });

    </script>

}

